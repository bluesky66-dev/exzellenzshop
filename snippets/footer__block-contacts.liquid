{% comment %}
    Render conatcts block for footer.

    Accepts:
     - block: {Object}
{% endcomment %}
{% style %}
    .footer-contacts {
        --footer-contacts--background-color: {{ block.settings.color_bg }};
        --footer-contacts--foreground-color: var(--footer-text-color);
        --footer-contacts--foreground-color-rgb: {{ block.settings.color_fg.red }}, {{ block.settings.color_fg.green }}, {{ block.settings.color_fg.blue }};
        --footer-contacts-icon-foreground-color: #CAD4DB;
    }
{% endstyle %}
