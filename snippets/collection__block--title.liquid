{%- comment -%}
    Render collection title using block settings

    Accepts:
     - block:      {Object}
     - blockOrder: {Number}
{%- endcomment -%}

<div
    class="collection__block collection__block--title{% if settings.animation_on_reveal %} reveal-slide-in{% endif -%}"
    style="order: {{ blockOrder }}"
    {{ block.shopify_attributes }}
>
    <h1 class="collection__title reveal-item">
        {{- collection.title | escape | default: 'Collection title' -}}
    </h1>
</div>
