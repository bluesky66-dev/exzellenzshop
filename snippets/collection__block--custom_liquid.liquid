{%- comment -%}
    Render block with custom liquid

    Accepts:
     - block:      {Object}
     - blockOrder: {Number}
{%- endcomment -%}

<div
    class="collection__block collection__block--custom_liquid"
    style="order: {{ blockOrder }}"
    {{ block.shopify_attributes }}
>
    {% unless block.settings.title == blank %}
        <h2 class="title">{% render 'helper__decorate-heading', heading: block.settings.title %}</h2>
    {% endunless %}
    {{- block.settings.custom_liquid -}}
</div>
